{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "es2022",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@base/*": ["src/components/0_base/*"],
      "@atoms/*": ["src/components/1_atoms/*"],
      "@molecules/*": ["src/components/2_molecules/*"],
      "@organisms/*": ["src/components/3_organisms/*"],
      "@templates/*": ["src/components/4_templates/*"],
      "@pages/*": ["src/components/5_pages/*"],
      "@objs/*": ["src/objs/*"],
      "@redux/*": ["src/redux/*"],
      "@libs/*": ["src/libs/*"],
      "@typage/*": ["src/types/*"],
      "@hooks/*": ["src/hooks/*"]
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src", "postcss.config.ts", "tests", "jest.setup.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "typeRoots": ["node_modules/@types"]
}
